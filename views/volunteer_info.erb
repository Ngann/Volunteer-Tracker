<h3><%= @volunteer.name%></h3>

<form action="/volunteers/<%= @volunteer.id%>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
 <label for="project_id">Add to Project</label>
 <% @projects.each() do |project| %>
   <div class="checkbox">
     <label>
       <input type="radio" name="project_id" value="<%= project.id() %>"><%= project.title() %>
     </label>
   </div>
  <% end %>

 <label for="name">Update name</label>
 <input id="name" name="name" type="text" value="<%= @volunteer.name%>">
 <button type="submit">Update Volunteer</button>
</form>

<a href="/">Return to Main Page</a>
